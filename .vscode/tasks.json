    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "bun: start",
            "command": "bun",
            "args": ["run", "start"],
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "type": "shell",
            "label": "bun: test",
            "command": "bun",
            "args": ["run", "test"],
            "isBackground": true,
            "group": "test",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "type": "shell",
            "label": "bun: build",
            "command": "bun",
            "args": ["run", "build"],
            "group": "build",
            "problemMatcher": "$tsc"
        },
        {
            "type": "shell",
            "label": "bun: install",
            "command": "bun",
            "args": ["install"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
